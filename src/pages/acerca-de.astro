---
import '@/styles/markdown.css';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Card from '@/components/Card.astro';
import HeroCard from '@/components/HeroCard.astro';
import BlogPostLink from '@/components/BlogPostLink.astro';
import { Image } from 'astro:assets';
import { Code } from 'astro:components';
import areas from "@/content/_icons.json";

import bannerImg from '@/assets/banner.png';
import qrCodeImg from '@/assets/img/qr-code.png';

const styles = "mx-auto md:ml-auto mb-4 md:mb-0 w-[48px] h-[48px]";
const images = import.meta.glob("@/assets/icon/*", { eager: true });

const icons = areas.icons.map(area => {
  const image = images[`/src/assets/icon/${area.img}`] as Record<string, any>;
  return { ...area, image };
});

---
interface Props {
    title: string;
}

import MenuItem from "./MenuItem.astro"

const { title } = Astro.props;

const menuItems = [
  { href: "/acerca-de", label: "Sobre mi" },
  { href: "/portfolio", label: "Portfolio" },
  { href: "/blog/1", label: "Blog" },
  { href: "/temas", label: "Temas" }
];
---

<ul id="menu-items" class="hidden md:block navigation">
  {menuItems.map((item) => (
    <MenuItem
    href={item.href}
    label={item.label}
    isActive={title === item.label}
    />
  ))}
</ul>

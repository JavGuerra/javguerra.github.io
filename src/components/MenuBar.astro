---
import siteConfig from '@/siteConfig.json';
import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
// import ThemeToggle from './ThemeToggle.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<nav aria-label="Navegación principal" class="flex flex-wrap justify-between items-center">

    <a id="brand" class="tag" href="/">{siteConfig.default.title}</a>

    <Hamburger /> {/* Botón para menú móvil */}

    <Navigation title={title} />

    {/* <ThemeToggle /> */}
    
</nav>
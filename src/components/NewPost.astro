---
import { getNewPost } from '@/scripts/posts';
import { getSlugName } from '@/scripts/urlUtils';
import BlogPostCard from "@/components/BlogPostCard.astro";

const newPost =  await getNewPost();
---

{ newPost && 
  <ul class="my-8 text-center md:text-left">
    <BlogPostCard
      frontmatter={newPost.data}
      href=`${newPost.data.route || getSlugName(newPost.slug)}`
    />
  </ul>
}

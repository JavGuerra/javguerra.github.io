---
interface Props {
  date: Date | string;
}
const { date } = Astro.props;

const dateObject = date instanceof Date ? date : new Date(date);
---

<time datetime={dateObject.toISOString()}>
  {
    dateObject.toLocaleDateString('es-es', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  }
</time>
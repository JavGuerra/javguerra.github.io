---
import siteConfig from '@/siteConfig.json';
import { Image } from 'astro:assets';
import Social from './Social.astro';
import emailImage from '@/assets/email.svg';
import rssImage from '@/assets/rss.svg';
import socialImage from '@/assets/social.svg';
---

<footer class="my-10">

  <div class="flex flex-wrap md:flex-row-reverse gap-4 items-center justify-center">
    <p class="w-full md:w-auto md:mt-4 leading-tight text-center md:text-left">
      <a href={siteConfig.default.licenseUrl} ><small>{siteConfig.default.license}</small></a>
      <strong>{siteConfig.default.autor}</strong><br />
      <small class="gray"><i>{siteConfig.default.footer}</i></small>
    </p>

    <div class="flex gap-4">
      <Social platform="github" username={siteConfig.default.social.github} />
